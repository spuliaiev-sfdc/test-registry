extends layout

block layout-head
    script(type="text/javascript" src="/js/testsByTeam.js")

block  layout-header-nav-buttons
        li.nav-item
          a.nav-link(href='#') NEWITEM

block layout-content
    h1.mt-3 Find tests by Owning Team
    p.lead
        div.input-group.mb-3.hidden
          div.input-group-prepend
            span.input-group-text Team name

        div.input-group.mb-3
          input(id="teamName" class="form-control typeahead" type="text" placeholder="Team name" aria-label="Team name" aria-describedby="button-addon2" data-provide="typeahead" autocomplete="off")
          input(id="className" class="form-control typeahead" type="text" placeholder="Class name" aria-label="Class name" aria-describedby="button-addon2" data-provide="typeahead" autocomplete="off")
          input(id="methodName" class="form-control typeahead" type="text" placeholder="Method name" aria-label="Method name" aria-describedby="button-addon2" data-provide="typeahead" autocomplete="off")
          div.input-group-append
            button.btn.btn-outline-secondary(type="button" id="button-find")
                | Find

        div.container-fluid
            div.row
                div.col.col-8
                    table#example.table.table-striped.table-bordered
                        thead
                            tr
                                th Class
                                th Module
                                th TestKind
                        tbody
                div.col.col-4
                    div.card
                        div.card-body.classInformation
                            h5.card-title Test class information
                            ul.list-group.list-group-flush
                                li.list-group-item Cras justo odio
                                li.list-group-item Dapibus ac facilisis in
                                li.list-group-item Vestibulum at eros
                            a.card-link(href="#" id='classLinkCodeSearch') CodeSearch
                            a.card-link(href="#" id='classLinkIntelliJ') IntelliJ

block layout-footer
     span.text-muted Place sticky footer content here.
